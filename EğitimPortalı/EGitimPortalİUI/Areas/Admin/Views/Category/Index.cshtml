@model List<EGitimPortaliUI.Areas.Admin.Models.CategoryModel>
@{
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="main-panel">
	<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Kategori</h4>
			<div class="row">
				<div class="col-md-7">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Kategori Listesi</div>
						</div>
						<div class="card-body">

							<table class="table mt-3">
								<thead>
									<tr>

										<th scope="col">Kategori Adı</th>
										
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										<tr>
											<td>@item.CategoryName</td>
											
											<td><a asp-action="DeleteCategory" asp-area="Admin" asp-controller="Category" asp-route-id="@item.CategoryId" class="btn btn-outline-danger">Sil</a></td>
											<td><a asp-action="UpdateCategory" asp-area="Admin" asp-controller="Category" asp-route-id="@item.CategoryId" class="btn btn-outline-primary">Güncelle</a></td>

										</tr>
									}


								</tbody>
							</table>
							<a asp-action="AddCategory" asp-area="Admin" asp-controller="Category" class="btn btn-outline-primary">Yeni Kategori Ekle</a>
						</div>
					</div>

				</div>

			</div>
		</div>
	</div>

</div>