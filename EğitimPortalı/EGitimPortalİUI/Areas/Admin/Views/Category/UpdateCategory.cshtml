@model EGitimPortaliUI.Areas.Admin.Models.UpdateCategoryModel
@{
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="main-panel">
	<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Kategori</h4>
			<div class="row">
				<div class="col-md-6">
					<form asp-action="UpdateCategory" asp-area="Admin" asp-controller="Category" method="post">
						<div class="card">
							<div class="card-header">
								<div class="card-title">Kategori</div>
							</div>
							<div class="card-body">
									<div class="form-group">
									<label>Kategori Id</label>
									<input type="number" asp-for="CategoryId" class="form-control">

								</div>
								<div class="form-group">
									<label> Kategori</label>
									<input type="text" asp-for="CategoryName" class="form-control">

								</div>


							</div>
							<div class="card-action">
								<button class="btn btn-primary">Kategori Güncelle</button>

							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>