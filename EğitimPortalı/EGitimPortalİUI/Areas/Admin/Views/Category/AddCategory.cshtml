@model EGitimPortaliUI.Areas.Admin.Models.CategoryModel
@{
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="main-panel">
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori</h4>
		<div class="row">
			<div class="col-md-6">
					<form asp-action="AddCategory" asp-area="Admin" asp-controller="Category" method="post">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Eğitim</div>
					</div>
					<div class="card-body">
						<div class="form-group">
							<label >Eğitim Başlık</label>
							<input type="text" asp-for="CategoryName" class="form-control"  >

						</div>
						
							
					</div>
					<div class="card-action">
						<button class="btn btn-primary">Kategori Ekle</button>

					</div>
				</div>
				</form>
			</div>
		</div>
	</div>
</div>
</div>